{
  "name": "node-app-with-docker",
  "scripts": {
    "setup": "yarn --verbose",
    "build": "tsc -p tsconfig.json",
    "start:dev": "PORT=1000 ts-node-dev index.ts",
    "start:prod": "node dist/index.js",
    "docker:remove": "docker-compose down",
    "docker:logs": "docker logs node-app -f",
    "docker:run": "docker-compose up -d",
    "docker:build": "docker-compose build",
    "docker:build-up": "docker-compose up --build -d",
    "curl": "curl http://localhost:3000"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.10",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.2"
  }
}
